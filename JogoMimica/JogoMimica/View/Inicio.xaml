<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JogoMimica.View.Inicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome Grupo 1"/>
            <Entry Placeholder="Opcional"/>
            <Label Text="Nome Grupo 2"/>
            <Entry Placeholder="Opcional"/>
            <Label Text="Nivel"/>
            <Picker>
                <Picker.Items>
                    <x:String>Aleatorio</x:String>
                    <x:String>Facil</x:String>
                    <x:String>Medio</x:String>
                    <x:String>Dificil</x:String>
                </Picker.Items>
            </Picker>
            <Label Text="Tempo de cada palavra(seg)"/>
            <Entry Text="120"/>
            <Label Text="Rodadas"/>
            <Entry Text="7"/>

            <Button Text="Iniciar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>